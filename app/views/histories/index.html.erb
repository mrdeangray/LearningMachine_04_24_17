<p id="notice"><%= notice %></p>

<h1>History</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Date</th>
      <th>Rep count</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td><%= history.date %></td>
        <td><%= history.repCount %></td>
        <td><%=User.find(history.user_id).email%>(<%= history.user_id %>)</td>
        <td><%= link_to 'Show', history %></td>
        <td><%= link_to 'Edit', edit_history_path(history) %></td>
        <td><%= link_to 'Destroy', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New History', new_history_path %>
